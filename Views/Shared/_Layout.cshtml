function Submitnote(obj){
    $.ajax(

            {
                type: "POST",
           url: "https://localhost:44350/api/values",
                data: obj,
                success:function(data){
                 console.log(data);
                 console.log("success");
                 Getdata();
                },
                error:function(error){
                    console.log(error);
                }
            });

}
     

    function update(id) {
        $.ajax({
            type: "GET",
            url: "https://localhost:44350/api/values/"+id,
            success: function (data) {
                var title = document.getElementById("mtitle");
                var description = document.getElementById("mdescription")
                title.value = data.Title
                description.value = data.Description
                document.getElementById("newid").id =data.Id
                console.log(data);
                console.log("success");
            },
            error: function (error) {
                console.log(error);
            }
        })
    }

function deleteNode(id){
     console.log(id);
    $.ajax(
            {
            type: "DELETE",
            url: "https://localhost:44350/api/values/"+id,
                success:function(data){
                 console.log(data);
                 console.log("success");
                 Getdata();
                },
                error:function(error){
                    console.log(error);
                }
            });

    }

</script>

</html>
