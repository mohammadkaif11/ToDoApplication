        var obj = {
            Title: $("#mtitle").val(),
            Description: $("#mdescription").val()
        }
        $.ajax({
            type: "PUT",
            url: "https://localhost:44350/api/values/" + id,
            data:obj,
            success: function (data) {
                console.log(data);
                console.log("success");
                Getdata()
            },
            error: function (error) {
                console.log(error);
            }
        })
    }



    Getdata();
